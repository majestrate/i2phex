# This is a sample configuration file for code_swarm

# Frame width
Width=640

# Frame height
Height=480

# Input file
InputFile=data/phex-activity.xml

# Particle sprite file
ParticleSpriteFile=particle.png

# Project time per frame 
# -> 8640000 = 1 day
# -> 21915000 => 1 minute = 1 year
MillisecondsPerFrame=21915000

# Background in R,G,B
Background=0,0,0

# Color assignment rules
# Keep in order, do not skip numbers. Numbers start
# at 1.
# 
# Pattern:  "Label", "regex", R,G,B R,G,B
# Label is optional.  If it is omitted, the regex
# will be used.

# red
ColorAssign1="Phex Code",".*src.*phex.*", 255,50,50, 255,50,50
# grey
ColorAssign2="General Code",".*src.*", 60,60,60, 60,60,60
# blue
ColorAssign3="Docs",".*docs.*", 70,70,255, 70,70,255
# green
ColorAssign4="General Content",".*", 60,255,255, 60,255,255

#ColorAssign5="Code4",".*src4.*", 116,80,80, 116,80,100
#ColorAssign6="Code5",".*src5.*", 200,90,90, 200,90,110
#ColorAssign7="Code6",".*src6.*", 225,100,100, 225,100,120
#ColorAssign8="Code7",".*src7.*", 250,110,110, 250,110,130
#ColorAssign9="Code8",".*src8.*", 255,255,0, 255,255,140
#ColorAssign10=".*src9.*", 255,0,0, 255,10,150

# Save each frame to an image?
TakeSnapshots=true

# Where to save each frame
SnapshotLocation=frames/code_swarm-#####.png

# Create a glow around names? (Runs slower)
NameHalos=false

# Natural distance of files to people
EdgeLength=40

debug=false

# OpenGL is experimental. Use at your own risk.
UseOpenGL=false
